#event-map
  position absolute
  left 0
  right 0
  top header-height
  bottom footer-height
  background-color #B5D0D0
  margin auto
  background-color map-background

.leaflet-popup-content-wrapper
  border-radius 5px

.map-marker
  position relative
  &::before,
  &::after
    content ''
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    border-radius 100%
    transistion .2s
  &::before
    border 1px solid rgba(210, 106, 40, .3)
    background-color rgba(210, 106, 40, .7)
    height 20px
    width 20px
    transition .2s
  &::after
    background-color rgba(245, 245, 243, .8)
    width 5px
    height 5px
  &:hover
    &::before
      transition .2s
      background-color secondary
  
.map-search-wrap
  position relative
  top 0

.map-search
  padding-right 30px

.map-filter-content
  position absolute
  top 0
  right 0
  z-index 10000
  width 300px
  border-radius 0 0 5px 5px
  border 1px solid secondary
  border-top 0
  z-index 10000
  background  rgba(255,255,255, .9)
  box-shadow 0 2px 5px rgba(0,0,0,0.3)
  .clear-search
    cursor pointer
    position absolute
    right 10px
    top 50%
    transform translate(0, -50%)
    z-index 10
    font-size 18px
    color #999
  .form-group
    margin 0
  .input-group .form-control:not(:first-child):not(:last-child)
    border-radius 0 4px 4px 0
  .zoonosis
    > span
      font-weight bold
      padding-right 5px
    .form-group
      display inline-block
      label,
      input
        cursor pointer
        cursor pointer
      label
        font-weight normal

.search-wrap
  padding 15px 20px 15px 20px
  

.toggles
  padding 0
  border-top 2px solid darken(secondary, 15%)
  h2
    font-size 16px
    margin 0
    font-weight normal
  h3
    padding 7px 20px 5px 20px
    font-size 14px
    color blue
    margin 0 0 10px 0
    border-bottom 1px solid secondary
    background lighten(secondary, 90%)
    span.check
      position absolute
      right 20px
      font-size 12px
      color #999
      font-weight normal
      cursor pointer
      transition color .2s
      &:hover
        color secondary
        transition color .2s
      &::before
        font-family FontAwesome
        padding-right 4px
      &.uncheck-all
        &::before
          content '\f096'
        &::after
          content 'Uncheck All'
      &.check-all
        &::before
          content '\f046'
        &::after
          content 'Check All'
  .filter
    color #555
    position relative
    padding 15px 20px
    cursor pointer
    transition background .2s
    h2
      color #555
      font-size 14px
    &:hover
      background darken(secondary, 10%)
      color white
      h2,
      &::after
        color white
    &::after
      right 30px
      top 50%
      centerPosition(0,-50%)
      content "\f13a"
      font-family FontAwesome
      font-size 18px
      color #999
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      transition .2s
    &.open
      background secondary
      color white
      margin-bottom 0
      &:hover
        background darken(secondary, 10%)
      h2
        color white
      &::after
        content '\f139'
        color white
  .filter-block
    margin-bottom 15px
    &:last-of-type
      margin 0
  .form-group
    padding 0 20px
    .checkbox
      &:first-child
        margin-top 0


@media (max-width: 768px)
  #event-map
    top mobile-header-height
@media (max-width: 320px)
  .leaflet-popup-content,
  .leaflet-popup-content-wrapper
    max-width 300px
    
