.map-wrap
  full-width()
  top header-height

#event-map
  width 100%
  height 100%
  margin auto
  background-color #B5D0D0
.map-footer
  position fixed
  bottom 0
  border-top 2px solid secondary
  width 100%
  background white
  text-align center
  img
    margin 15px 0
  

@media (max-width: 768px)
  .map-wrap
    top mobile-header-height
@media (max-width: 320px)
  .leaflet-popup-content,
  .leaflet-popup-content-wrapper
    max-width 300px