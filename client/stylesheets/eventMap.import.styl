#event-map
  position absolute
  left 0
  right 0
  top header-height
  bottom footer-height
  background-color #B5D0D0
  margin auto
  background-color map-background

.leaflet-popup-content-wrapper
  border-radius 5px

.map-marker
  &::before
    @extend .icon
    color rgba(210, 106, 40, .8)
    content '*'
    display block
    font-size 22px
    margin-top -3px
    margin-left -9px
    line-height 0
    transition all .2s ease-in-out
  &:hover
    &::before
      transform scale(1.5)
      transistion()
      color secondary

.map-search-wrap
  position relative
  top 0

.map-search-content
.map-filter-content
  position absolute
  top 0
  right 0
  z-index 10000
  width 300px
  padding 13px 20px 15px 20px
  border-radius 0 0 5px 5px
  border 1px solid secondary
  border-top 0
  z-index 10000
  background  rgba(255,255,255, .9)
  box-shadow 0 2px 5px rgba(0,0,0,0.3)
  .clear-search
    cursor pointer
    position absolute
    right 10px
    top 50%
    transform translate(0, -50%)
    z-index 10
    font-size 18px
    color #999
  .form-group
    margin 0
  .input-group .form-control:not(:first-child):not(:last-child)
    border-radius 0 4px 4px 0
  .zoonosis
    padding-top 8px
    > span
      font-weight bold
      padding-right 5px
    .form-group
      display inline-block
      label,
      input
        cursor pointer
        cursor pointer
      label
        font-weight normal

.map-filter-content
  padding 0
  right auto
  left 0
  h2
    font-size 16px
    margin 0
    font-weight normal
  h3
    padding 0 20px 5px 20px
    font-size 14px
    color blue
    margin 0 0 10px 0
    border-bottom 1px solid secondary
  .filter
    color #555
    position relative
    padding 20px
    cursor pointer
    transition background .2s
    h2
      color #555
    &:hover
      background darken(secondary, 10%)
      color white
      h2
        color white
    &::after
      right 10px
      top 50%
      centerPosition(0,-50%)
      content "\f146"
      font-family FontAwesome
      font-size 18px
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      transition .2s
    &.open
      background secondary
      color white
      margin-bottom 10px
      h2
        color white
      &::after
        content '\f0fe'
      
  .filter-block
    margin-bottom 10px
    &:last-of-type
      margin 0
  .form-group
    padding 0 20px
    .checkbox
      &:first-child
        margin-top 0

@media (max-width: 768px)
  #event-map
    top mobile-header-height
@media (max-width: 320px)
  .leaflet-popup-content,
  .leaflet-popup-content-wrapper
    max-width 300px
    