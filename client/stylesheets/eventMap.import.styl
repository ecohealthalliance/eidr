#event-map
  position absolute
  left 0
  right 0
  top header-height
  bottom footer-height
  background-color #B5D0D0
  margin auto
  background-color map-background

.leaflet-popup-content-wrapper
  border-radius 5px

.map-marker
  &::before
    @extend .icon
    color rgba(210, 106, 40, .8)
    content '*'
    display block
    font-size 22px
    margin-top -3px
    margin-left -9px
    line-height 0
    transition all .2s ease-in-out
  &:hover
    &::before
      transform scale(1.5)
      transistion()
      color secondary

.map-search-wrap
  position relative
  top 0

.map-search-content
.map-filter-content
  position absolute
  top 0
  right 0
  z-index 10000
  max-width 650px
  padding 13px 20px 15px 20px
  border-radius 0 0 5px 5px
  border 1px solid secondary
  border-top 0
  z-index 10000
  background  rgba(255,255,255, .9)
  box-shadow 0 2px 5px rgba(0,0,0,0.3)
  .clear-search
    cursor pointer
    position absolute
    right 10px
    top 50%
    transform translate(0, -50%)
    z-index 10
    font-size 18px
    color #999
  .form-group
    margin 0
  .input-group .form-control:not(:first-child):not(:last-child)
    border-radius 0 4px 4px 0
  .zoonosis
    padding-top 8px
    > span
      font-weight bold
      padding-right 5px
    .form-group
      display inline-block
      label,
      input
        cursor pointer
        cursor pointer
      label
        font-weight normal

.map-filter-content
  right auto
  left 0

@media (max-width: 768px)
  #event-map
    top mobile-header-height
@media (max-width: 320px)
  .leaflet-popup-content,
  .leaflet-popup-content-wrapper
    max-width 300px
    