#event-map
  position absolute
  left 0
  right 0
  top header-height
  bottom footer-height
  background-color #B5D0D0
  margin auto
  background-color map-background

.leaflet-popup-content-wrapper
  border-radius 5px

.map-marker
  position relative
  &::before,
  &::after
    content ''
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    border-radius 100%
  &::before
    border 1px solid rgba(210, 106, 40, .3)
    background-color rgba(210, 106, 40, .7)
    height 20px
    width 20px
  &::after
    background-color rgba(245, 245, 243, .8)
    width 6px
    height 6px
@media (max-width: 768px)
  #event-map
    top mobile-header-height
@media (max-width: 320px)
  .leaflet-popup-content,
  .leaflet-popup-content-wrapper
    max-width 300px