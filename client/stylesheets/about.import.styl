.about-intro
  background secondary
  color white
  padding-top 20px
  padding-bottom 30px
  h1
    font-size 40px
    margin 0 auto
    bg('/images/eidr-logo-white', 450px, 312px, 'png')
  p
    padding-top 30px
    width 75%
    margin 20px auto
    text-align center

.exploring
  @extend .centered
  margin 30px 0
  span
    margin-bottom 10px
    &::before
      display block
      margin-top 5px
      padding-right 5px
      font-size 80px
      font-weight normal
      color blue
  p
    margin-bottom 20px
  img
    max-width 100%
    border 1px solid #CCC
    border-radius 3px
  li
    padding-left 30px
    padding-right 30px
    margin-bottom 20px

.method
  margin-bottom 20px
  padding-left 30px
  padding-right 30px
  p
    text-indent 20px

.funding
  p
    width 75%
    margin 0 auto 20px auto

@media (max-width: 992px)
  .about-intro
    h1
      margin-left auto
      margin-right auto
    p
      padding-top 40px

@media (min-width: 768px) and (max-width: 992px)
  .exploring
    li
      margin-bottom 30px
      padding-right 0
      &:first-of-type
        padding-right 45px
      &:last-of-type
        clear both
        margin 0 auto
        float none
@media (max-width: 768px)
  .about-intro
    h1
      font-size 35px
      changeBGSize(250px,173px)
    p
      width 100%
      text-align center
      padding-top 15px
  .exploring
    li
      padding-left 0
      padding-right 0
  .funding
    p
      width 100%
  .method
    padding-left 15px
    padding-right 15px
