.col-lg-4
    padding-right 25
    padding-left 25

.about
  margin-top 40px
 
.eha-square
  max-width 100%

.col-md-4 .featurette-image
  width 350px
  height 350px

.featurette-divider
  margin 20px 0

.featurette-heading
  font-weight 300
  line-height 1
  letter-spacing -1px
  margin-top 50px

.exploring
  h3, .glyphicon
    display inline-block
    vertical-align middle
   font-weight 600 
  .glyphicon
    font-size 30px
    margin-top 5px
    font-weight normal
    padding-right 5px
  p
    margin-bottom 20px
  img
    max-width 100%
    border 1px solid #CCC
    border-radius 3px
  li
    padding-left 15px
    padding-right 15px
    margin-bottom 20px
  a
    text-shadow 0 1px 0 rgba(0,0,0,.2)

.about-intro
  background secondary
  color white
  padding-top 40px
  padding-bottom 30px
  h1
    font-size 40px
    margin-top 0
    bg(eidr-logo-white, 450px, 312px, 'png')
  p
    padding-top 30px

.short-desc
  font-size 24px
  font-weight 500
  line-height 1.3

.other
  text-align left
  color black

.method
  margin-bottom 20px

.references
  li
    margin-bottom 10px
    color m-gray
    font-size 11px

@media (max-width: 992px)
  .about-intro
    h1
      margin-left auto
      margin-right auto
    p 
      padding-top 40px


@media (min-width: 768px)
  .exploring
    li
      margin-bottom 0
      padding-right 45px
      
@media (max-width: 768px)
  .about-intro
    h1
      font-size 35px
      changeBGSize(350px,243px)
    