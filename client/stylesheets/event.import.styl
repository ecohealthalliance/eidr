.event
  .table
    td:first-child
      width 40%
      border-right 1px solid #DDD
      padding-right 20px

.event-wrap
  margin-bottom 20px

.fact-sheet-wrap
  background secondary-light
  padding-top 30px
  padding-bottom 20px
  margin-bottom 30px

.event-head
  h1
    margin 0
  .minor
    font-size 24px
  h3
    margin 5px 0 0 0 
    color blue
    font-size 18px

.minor
  color #666
  font-size 20px
  font-weight normal
  margin 0

.basic-info
  margin-bottom 20px

.notes
  margin-bottom 30px
  h3
    color #666

.tables 
  td:first-child
    width 40%
    border-right table-border
    padding-right 25px
  td
    position relative
  td:last-child
    padding-right 80px
  
.location-list
  width 450px
  tr:first-child td
    border-top 0
  td
    position relative
  
.main-facts
  margin: 20px 0
  text-align center
  margin-bottom 40px
  th, td
    border-right table-border
    text-align center
  th
    font-size 16px
    border-bottom table-border
  th:last-child,
  td:last-child
    border-right 0
  &:after
    clearFix()
  .lrg
    font-size 18px
  
.references
  h2
    font-size 16px
    margin 0
    display inline-block
  p
    font-style italics    
  .date
    margin 0
    
.ref-link
  &:hover
    text-decoration none

@media (max-width: 768px)
  table, thead, tbody, th, td, tr
    display block

  .event .table td:first-child,
  td:first-child
    width 100%

  thead tr { 
    position: absolute;
    top: -9999px;
    left: -9999px;
  }
  
  tr { border: 0 }
  
  td { 
    /* Behave  like a "row" */
    border: none;
    border-bottom: 1px solid #eee; 
    position: relative;
    padding-left: 50%; 
  }
  
  td:before { 
    /* Now like a table header */
    position: absolute;
    /* Top/left values mimic padding */
    top: 6px;
    left: 6px;
    width: 45%; 
    padding-right: 10px; 
    white-space: nowrap;
  }
  
  .table-striped > tbody > tr:nth-child(odd) > td .table-striped > tbody > tr:nth-child(odd) > th
    background none
    
  .tables td:first-child
    width 100%
    font-weight bold
    border-right 0
    background ll-gray
    
  .tables td:last-child
    margin-bottom 20px
    border-top 0
  

