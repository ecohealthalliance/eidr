#info
   margin-bottom 10px

#info h2.label
   font-size 24px
   color black
   display inline
   text-transform capitalize
   white-space normal
   padding 0px

 #info .row
   margin 0.2em

.facto
  display inline-block
  height 800px
  background-color #2c3e50
  overflow visible

.rotate
  display inline-block
  font-size 44px
  color white
  white-space nowrap
  text-transform uppercase
  transform rotate(270deg) translate(-250px, -80px)

.stats-field
  border-bottom 1px dotted #000

.minor
  color #999
  font-size 20px
  font-weight normal
  margin 0
  
.fact-sheet
  margin-bottom 30px