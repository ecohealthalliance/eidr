body
  color #333

p
  line-height 1.6em
  font-weight 400

ul
  font-weight 400

p, 
ul,
h1,
h2,
h3,
h4
  @extend .white-shadow

a, 
button,
tr
  transition .2s
  &:hover
    transition .2s

.btn
  @extend .dark-shadow
  letter-spacing .03em

h1
  font-weight 600
  color primary
  font-size 40px

#main
  margin-top 60px
  min-height 550px

.main-content
  padding-top:30px

.navbar-nav
  float right
  
.table-header
  padding 10px
  margin-bottom 0
  border-radius tableRadius tableRadius 0 0
  border 1px solid #CCC

table tr:last-child
  border 0

.table-icon
  font-size 15px
  color #CCC
  
.panel-heading
  padding-left 8px
  h3
    margin 0

.default-fullWidth
  background ll-gray
  
.tooltip-inner
  max-width 350px
  
.popover
  min-width 300px
  .quote-text
    font-style italic
.popover-content
  overflow hidden
  text-overflow ellipsis

@media (max-width: 768px)
  .popover,
  .tooltip,
  .tooltip-inner
    min-width 100px
    max-width 225px
  .tooltip
    left 50% !important
    transform translate(-50%, 0)
  .tooltip-arrow
    top 0 !important
  #main
    margin-top 55px
    min-height 300px
  .main-content
    padding-top 15px
  a.btn,
  a.btn-primary
    padding-top 15px
    padding-bottom 15px
  .content-block
    &:first-child
      padding 15px 0 30px 0
    
