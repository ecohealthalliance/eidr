html,
body
  height 100%

body,
ul
  color #555
  font('Open Sans')

p
  line-height 1.6em
  font-weight 400

ul
  font-weight 400

ul,
h1,
h2,
h3,
h4
  letter-spacing .01em

h1,
h2,
h3,
h4
  color primary
  font-weight 700

h1
  font-size 40px
  font-weight 800

h2
  font-size 32px
  color primary
  margin-bottom 20px
  margin-top 0

h2.section-title
  font-size 40px
  margin-top 0

h2 a.more-info
  font-size 12px
  color btn-default

h3
  font-size 20px
  margin-top 0
  margin-bottom 15px
  color secondary

h4
  color body-text
  font-weight 600
  font-size 15px

h5
  font-size 100%
  font-weight 600
  color d-gray  

a, 
button,
tr
  transition .2s
  &:hover
    transition .2s

.btn
  @extend .dark-shadow
  letter-spacing .03em

#main
  margin-top 70px
  min-height 550px

section
  padding 30px 0

.minor
  color #666
  font-size 20px
  font-weight normal
  margin 0

.content-wrapper
  padding-top header-height
  padding-bottom footer-height

.page-wrapper
  position relative
  min-height 100%

.navbar-nav
  float right
  
.table-header
  padding 10px
  margin-bottom 0
  border-radius tableRadius tableRadius 0 0
  border 1px solid #CCC

table tr:last-child
  border 0

.table-icon
  font-size 15px
  color #CCC
  
.panel-heading
  padding-left 8px
  h3
    margin 0

.default-fullWidth
  background ll-gray
  
.tooltip-inner
  max-width 350px
  
.popover
  z-index 20000
  min-width 300px
  .quote-text
    font-style italic
.popover-content
  overflow hidden
  text-overflow ellipsis
  color d-gray
  font-weight normal
  font-size 14px
  line-height 1.3
.close-popover
  display none
  
.container-fluid
  &.gray
    background ll-gray
  &.green
    background ll-gray
    
@media (max-width: 768px)
  .content-wrapper
    padding-top mobile-header-height
    padding-bottom footer-height
  .popover,
  .tooltip,
  .tooltip-inner,
  .popover-content
    min-width 200px
    max-width 325px
  .tooltip-arrow
    top 0 !important
  #main
    margin-top 55px
    min-height 300px
  .main-content
    padding-top 15px
  a.btn,
  a.btn-primary
    padding-top 15px
    padding-bottom 15px
  .content-block
    &:first-child
      padding 15px 0 30px 0
  .close-popover
    display block
    position absolute
    top -5px
    right -5px
    color d-gray
    font-size 22px
