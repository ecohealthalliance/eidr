html,
body
  height 100%

body
  color #333

p
  line-height 1.6em
  font-weight 400

ul
  font-weight 400

p 
  @extend .white-shadow

ul,
h1,
h2,
h3,
h4
  @extend .white-shadow
  letter-spacing .01em
a, 
button,
tr
  transition .2s
  &:hover
    transition .2s

.btn
  @extend .dark-shadow
  letter-spacing .03em

h1
  font-weight 600
  color primary
  font-size 40px

section
  padding 30px 0

.minor
  color #666
  font-size 20px
  font-weight normal
  margin 0

.main-content
  padding-top header-height
  padding-bottom footer-height

.page-wrapper
  position relative
  min-height 100%

.navbar-nav
  float right
  
.table-header
  padding 10px
  margin-bottom 0
  border-radius tableRadius tableRadius 0 0
  border 1px solid #CCC

table tr:last-child
  border 0

.table-icon
  font-size 15px
  color #CCC
  
.panel-heading
  padding-left 8px
  h3
    margin 0

.default-fullWidth
  background ll-gray
  
.tooltip-inner
  max-width 350px
  
.popover
  z-index 20000
  min-width 300px
  .quote-text
    font-style italic
.popover-content
  overflow hidden
  text-overflow ellipsis
  color d-gray
  font-weight normal
  font-size 14px
  line-height 1.3
.close-popover
  display none

@media (max-width: 768px)
  .popover,
  .tooltip,
  .tooltip-inner,
  .popover-content
    min-width 200px
    max-width 325px
  .tooltip-arrow
    top 0 !important
  .main-content
    padding-top mobile-header-height
  a.btn,
  a.btn-primary
    padding-top 15px
    padding-bottom 15px
  .content-block
    &:first-child
      padding 15px 0 30px 0
  .close-popover
    display block
    position absolute
    top -5px
    right -5px
    color d-gray
    font-size 22px
