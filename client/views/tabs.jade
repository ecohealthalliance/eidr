template(name="tabs")
  #tabs.tabs

    +statsTable stats=stats event=this

    .panel.panel-default
      .panel-heading
        h3.panel-title Pathogen Stats
      .panel-body
        +statsTable stats=pathogenStats event=this

    .row
      .col-md-6
        .panel.panel-default
          .panel-heading
            h3.panel-title Location Stats
          .panel-body
            +statsTable stats=locationStats event=this

      .col-md-6
        .panel.panel-default
          .panel-heading
            h3.panel-title Economics Stats
          .panel-body
            +statsTable stats=../economicsStats event=this

    .panel.panel-default
      .panel-heading
        h3.panel-title References
      .panel-body
        each references
          +reference

template(name="statsTable")
  table.table.table-striped.table-bordered
    
    tbody
      each stats
        if showStat spreadsheetName ../event
          tr.stats-field(data-toggle="tooltip", data-placement="bottom", title="{{getDescription ../event}}")
            td #{displayName}:
            td {{getVal spreadsheetName ../event}}

template(name="reference")
  .panel
    if isPMCID
      a(href="http://www.ncbi.nlm.nih.gov/pmc/articles/{{archiveLocation}}")
        +referenceDescription
    else if isPMID
      a(href="http://www.ncbi.nlm.nih.gov/pubmed/{{archiveLocation}}")
        +referenceDescription
    else if rights
      +referenceDescription
    else
      b #{this}

template(name="referenceDescription")
  b {{formatAuthor}} #{date} 
  i #{title}
