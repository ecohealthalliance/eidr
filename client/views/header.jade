template(name="header")
  header
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse' data-target=".navbar-collapse") Menu
            a.navbar-brand(href="{{pathFor 'splash'}}")
          
          .collapse.navbar-collapse
            +navLinks

template(name="navLinks")
  ul.nav.navbar-nav
    if isInRole "admin"
      li(class="{{checkActive 'admins'}}")
        a(href="{{pathFor 'admins'}}") Admins
      li(class="{{checkActive 'comments'}}")
        a(href="{{pathFor 'adminComments'}}") Comments
    li(class="{{checkActive 'about'}}")
      a(href="{{pathFor 'about'}}") About
    li(class="{{checkActive 'events'}}")
      a(href="{{pathFor 'events'}}") Emergence Events
    if currentUser
      li(class="{{checkActive 'download'}}")
        a(href="{{pathFor 'download'}}") Download
    li(class="{{checkActive 'eventMap'}}")
      a(href="{{pathFor 'eventMap'}}") Event Map
    li
      a.withIcon(href="{{pathFor 'varDefs'}}" title="Variable Definitions")
        span.link-text-nav Variable Definitions
        span.glyphicon.showSmall.glyphicon-question-sign
    li
      a.withIcon(href="mailto:admin@ecohealth.io" title="Contact Us") 
        span.link-text-nav Contact Us
        span.icon.showSmall.mail
    li(class="{{checkActive 'sign-in'}}")
      +account

template(name="account")
  if currentUser
    a.withIcon(href="" title="Sign Out")#logOut
      span.link-text-nav Sign Out
      span.icon.logout
  else
    a.withIcon(href="/sign-in" title="Sign In")
      span.link-text-nav Sign In
      span.icon.login
