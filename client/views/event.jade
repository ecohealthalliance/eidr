template(name="event")
  .container-fluid.fact-sheet-wrap.main-content
    .container
        .row
          .col-lg-12.event-head
            with event
              .basic-info
                .row
                  .col-lg-10
                    h1 {{simpleTitle}}
                    if diseaseVal
                      h2.minor Disease:
                        span #{diseaseVal}
                    h3 {{displayDates}}

            .row.fact-sheet
              with event
                .col-lg-7
                  p #{Abstract}
                  +facts
                .col-lg-5
                  +map
                  .location-list {{locationList locations}}
                  div
                    small *This represents the most specific location information found for the event.
  .container.tables
    .row
      with event
        .col-lg-12
          +tables economicStats=economicStats event=this
  .container.comments-wrap
    +comments


template(name="facts")
  dl
    .main-facts
      .col-lg-4.main-fact.col-sm-6
        dt Emergence Type
        dd #{eidCategoryVal}
      .col-lg-4.main-fact.col-sm-6
        dt Driver
        dd #{driverVal}
      .col-lg-2.main-fact.col-sm-6
        dt Infected
        dd.lrg #{numberInfectedVal}
      .col-lg-2.main-fact.col-sm-6
        dt Deaths
        dd.lrg #{numberDeathsVal}

    .main-facts
      .col-lg-6.main-fact
        dt Event Transmission
        ul.transmission-icons.list-unstyled
          each icons
            li(class="#{className}" title="#{fullName}")
          else 
            li.unknown

      if zoonoticTypeVal
        .col-lg-3.main-fact
          dt Zoonotic Type
          dd #{zoonoticTypeVal}
        .col-lg-3.main-fact
          dt Host
          dd #{hostVal}

template(name="comments")
  .row
    .col-lg-7
      .panel.panel-default
        .panel-heading
          h3 Comments
        .panel-body.comments-container
          .comment-form
            if showCommentButton
              form#add-comment
                .row
                  .col-lg-12
                    textarea.form-control.new-comment(name="comment" placeholder="General comment about this event.")
                .row
                  .col-lg-6.col-sm-12
                    button.btn.btn-primary.btn-lg.btn-block(type="submit") Add comment
            else
              a.btn.btn-primary.btn-lg(href='../sign-in') Sign in to comment
          if checkComments
            ul.list-group.comment-list
              each comments
                li.list-group-item.comment
                  p #{comment}
                  .row.comment-info
                    .col-lg-6.user
                      p 
                        a(href="mailto:#{user}") #{user}
                    .col-lg-6.time
                      p #{timeStamp}


