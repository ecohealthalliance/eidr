template(name="mapFilters")
  .container.map-search-wrap
    .mobile-control
      span Filters
    .map-filter-content
      .search-wrap
        .input-group
          span.input-group-addon
            i.fa.fa-filter
          input.map-search.form-control(type="text" placeholder="Search")
          span.clear-search
            i.fa.fa-times-circle
      .toggles
        .filter
          h2 Filters
        .filters-wrap.open
          .filter-block
            h3 Event Transmission
              span.check.uncheck-all
            .form-group
              each getTransmissionTypes transmissionField
                .checkbox
                  label
                    input.eventTransmission(type="checkbox" value="#{this}" checked)
                    | #{this}
          .filter-block.zoonosis
            h3 Zoonotic
            .form-group
              .checkbox
                label
                  input.zoonotic(type="checkbox" value="Yes" checked)
                  | Yes
              .checkbox
                label
                  input.zoonotic(type="checkbox" value="No" checked)
                  | No
