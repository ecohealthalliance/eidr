template(name="mapFilters")
  .container.map-search-wrap
    .mobile-control
      span Filters
    .map-filter-content
      .search-wrap
        .input-group
          span.input-group-addon
            i.fa.fa-filter
          input.map-search.form-control(type="text" placeholder="Search by event name")
          span.clear-search
            i.fa.fa-times-circle
      .toggles
        .filter
          h2 Filters
        .filters-wrap.hidden
          .filter-block.emergence
            h3 Emergence Type
              +checkControl
            .form-group.checkAll
              each getFieldValues 'eidCategory'
                .checkbox
                  label
                    input.eidCategory(type="checkbox" value="#{this}" checked)
                    | #{this}
          .filter-block.zoonosis
            h3 Zoonotic
              +checkControl
            .form-group
              .checkbox
                label
                  input.zoonotic(type="checkbox" value="Yes" checked)
                  | Yes
              .checkbox
                label
                  input.zoonotic(type="checkbox" value="No" checked)
                  | No
              h4 Transmission of the microorganism from animals to people (Event Specific)
              each getEventTransmissionAnimal
                .checkbox
                  label
                    input.eventTransmissionAnimal(type="checkbox" value="#{this}" checked)
                    | #{this}

template(name="checkControl")
  span.check.uncheck-all
  span.check.check-all.hidden
